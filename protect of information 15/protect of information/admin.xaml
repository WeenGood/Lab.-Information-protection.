        xmlns:local="clr-namespace:protect_of_information"
        mc:Ignorable="d"
        Title="Окно администратора" Height="463.18" Width="823.513" Activated="Window_Activated">
    <Grid Loaded="Grid_Loaded">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="142*"/>
            <ColumnDefinition Width="129*"/>
            <ColumnDefinition Width="267*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="myDataGrid" HorizontalAlignment="Left" Height="399" Margin="115,10,0,0" VerticalAlignment="Top" Width="467" Loaded="DataGrid_Loaded" MouseDoubleClick="myDataGrid_MouseDoubleClick" SelectionUnit="Cell" Grid.Column="1" IsHitTestVisible="True" Grid.ColumnSpan="2"/>
