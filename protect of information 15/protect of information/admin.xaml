        <Button x:Name="encB" Content="Сохранить" HorizontalAlignment="Left" Margin="68,71,0,0" VerticalAlignment="Top" Width="122" Click="Button_Click_1" Grid.ColumnSpan="2"/>
        <Label Content="Новый код шифрования:" HorizontalAlignment="Left" Margin="10,12,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="180"/>

    </Grid>
</Window>
