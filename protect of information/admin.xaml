<Window x:Class="protect_of_information.admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:protect_of_information"
        mc:Ignorable="d"
        Title="admin" Height="450" Width="800">
    <Grid Loaded="Grid_Loaded">
        <Button x:Name="updateB" Content="Обновить" HorizontalAlignment="Left" Margin="230,246,0,0" VerticalAlignment="Top" Width="75" Click="updateB_Click"/>
        <Button x:Name="saveB" Content="Сохранить" HorizontalAlignment="Left" Margin="329,246,0,0" VerticalAlignment="Top" Width="75" Click="saveB_Click"/>
        <DataGrid x:Name="myDataGrid" HorizontalAlignment="Left" Height="188" Margin="230,41,0,0" VerticalAlignment="Top" Width="271" Loaded="DataGrid_Loaded" MouseDoubleClick="myDataGrid_MouseDoubleClick" SelectionUnit="Cell"/>
        <Button x:Name="newB" Content="Добавить" HorizontalAlignment="Left" Margin="426,246,0,0" VerticalAlignment="Top" Width="75" Click="newB_Click"/>
        <Button x:Name="changePwd" Content="Сменить пароль" HorizontalAlignment="Left" Margin="47,175,0,0" VerticalAlignment="Top" Width="108" Click="changePwd_Click"/>

    </Grid>
</Window>
